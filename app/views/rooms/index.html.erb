<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Isavailable</th>
      <th>Description</th>
      <th>Price</th>
      <th>User</th>
      <th>Image1</th>
      <th>Image2</th>
      <th>Image3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.number %></td>
        <td><%= room.isAvailable %></td>
        <td><%= room.description %></td>
        <td><%= room.price %></td>
        <td><%= room.user %></td>
        <td><%= room.image1 %></td>
        <td><%= room.image2 %></td>
        <td><%= room.image3 %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

